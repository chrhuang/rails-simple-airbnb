<div class="container">
  <h1>All our Flats (<%= @flats.size %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="card text-center col-4 m-2" style="width: 18rem; padding: 0;">
        <img style="width:100%; height: 150px" src="<%= flat.image_url %>" class="card-img-top" alt="house image">
        <div class="card-body">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.address %></p>
          <div class='d-flex justify-content-center align-items-center'>
            <div class="d-flex justify-content-center align-items-center">
              <i class="fas fa-user-friends"></i>
              <span class="ms-1"><%= flat.number_of_guests %></span>
            </div>
            <div class="d-flex justify-content-center align-items-center ms-3">
              <i class="fas fa-euro-sign"></i>
              <span class="ms-1"><%= flat.price_per_night %></span>
            </div>
          </div>
          <hr>
          <%= link_to "More info", flat_path(flat), class: "text-primary" %>
          <%= link_to "Edit", edit_flat_path(flat), class: "text-warning" %>
          <%= link_to "Remove", flat_path(flat), class: "text-danger", method: :delete %>
        </div>
      </div>
    <% end %>
  </div>
</div>
