<img style="width: 100%; height: 400px;" src='<%= @flat.image_url %>' alt=''>
<div class="container">
  <div class="row" style="position: relative; top: -40px;">
    <div class="col-8">
      <div class="content">
        <h2><%= @flat.name %></h2>
        <p><%= @flat.address %></p>
      </div>
      <div class="content mt-3">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
      </div>
    </div>
    <div class="col-3">
      <div class='content'>
        <p>Book This place !</p>
        <input type='date'>
        <input type='date'>
        <button class="btn btn-success mt-3">Book</button>
      </div>
      <div class='content mt-3'>
        <h2>Detail</h2>
        <div class='d-flex align-items-center'>
          <div class="d-flex justify-content-center align-items-center">
            <i class="fas fa-user-friends"></i>
            <span class="ms-1"><%= @flat.number_of_guests %></span>
          </div>
          <div class="d-flex justify-content-center align-items-center ms-3">
            <i class="fas fa-euro-sign"></i>
            <span class="ms-1"><%= @flat.price_per_night %></span>
          </div>
        </div>
      </div>
      <div class='content mt-3'>
        <div class="d-flex justify-content-between align-items-center">
          <h5>Share</h5>
          <i class="fab fa-twitter ms-2"></i>
          <i class="fab fa-facebook-f ms-2"></i>
          <i class="fab fa-pinterest ms-2"></i>
          <i class="fab fa-github ms-2"></i>
        </div>
      </div>
    </div>
  </div>
</div>
